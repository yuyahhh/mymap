=form_for @group do |f|
  = f.text_field :name, class: "chat-group-form__input", placeholder: "グループ名を入力してください"
  = f.text_field :detail, class: "chat-group-form__input", placeholder: "グループ情報を入力してください"
  = f.collection_check_boxes :user_ids, User.all, :id, :nickname
  = f.submit "Save", class: "chat-group-form__action-btn"